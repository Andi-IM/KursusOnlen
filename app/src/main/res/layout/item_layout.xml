<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_item_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:background="@drawable/table_content_cell_bg"
        android:gravity="center"
        android:minWidth="50dp"
        android:padding="10dp"
        android:textSize="16sp"
        tools:text="1." />

    <TextView
        android:id="@+id/txt_item_nama"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:background="@drawable/table_content_cell_bg"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        tools:text="Andi" />

    <TextView
        android:id="@+id/txt_item_alamat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:background="@drawable/table_content_cell_bg"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        tools:text="Jl. Kampung Nias No. 69" />

    <TextView
        android:id="@+id/txt_item_phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:background="@drawable/table_content_cell_bg"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        tools:text="082383668900" />

    <TextView
        android:id="@+id/txt_item_alamat_maps"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:background="@drawable/table_content_cell_bg"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        tools:text="@string/latitute_longitude" />

    <TextView
        android:id="@+id/txt_item_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_column="5"
        android:background="@drawable/table_content_cell_bg"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="Image" />

    <ImageView
        android:id="@+id/img_item_foto"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_column="5"
        android:background="@drawable/table_content_cell_bg"
        android:padding="10dp"
        android:textSize="16sp"
        tools:ignore="ContentDescription" />

</TableRow>